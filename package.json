{
  "name": "xlog-custom-css-debugger",
  "displayName": "xLog custom css debugger",
  "version": "0.3.0",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "description": "A convenient web extension for debugging custom css in xLog.",
  "author": "birdgg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/birdgg/xLog-css-debug-extension.git"
  },
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:monaco": "npm run build:monaco -- --mode development",
    "build": "run-p build-chrome build-firefox",
    "build-chrome": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js build:monaco",
    "build-firefox": "cross-env NODE_ENV=production EXTENSION=firefox run-s clear build:web build:prepare build:background build:js build:monaco",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:monaco": "vite build --config vite.config.monaco.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:firefox": "rimraf extension-firefox.zip && jszip-cli add extension-firefox/* -o ./extension-firefox.zip",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension-firefox --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache src",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.36.0",
    "@ffflorian/jszip-cli": "^3.4.1",
    "@iconify/json": "^2.2.61",
    "@playwright/test": "^1.33.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.5",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@unocss/reset": "^0.51.12",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vue/compiler-sfc": "^3.2.47",
    "@vue/test-utils": "^2.3.2",
    "@vueuse/core": "^10.1.2",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.40.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "js-base64": "^3.7.5",
    "jsdom": "^21.1.2",
    "kolorist": "^1.8.0",
    "lint-staged": "^13.2.2",
    "monaco-editor": "^0.38.0",
    "npm-run-all": "^4.1.5",
    "requirejs": "^2.3.6",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "unocss": "^0.51.12",
    "unplugin-auto-import": "^0.15.3",
    "unplugin-icons": "^0.16.1",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.5",
    "vitest": "^0.31.0",
    "vue": "^3.2.47",
    "vue-demi": "^0.14.0",
    "web-ext": "^7.6.2",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
