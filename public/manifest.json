{
  "manifest_version": 3,
  "name": "xLog custom css debugger",
  "description": "A convenient chrome extension for debugging custom CSS in xLog.",
  "version": "0.1",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor.js", "content_script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "activeTab", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["monaco-editor/*"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    }
  ]
}
